<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/red"
            android:layout_margin="@dimen/_15sdp"
            app:cardElevation="@dimen/_8sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linear_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_5sdp"
                    android:padding="@dimen/_15sdp"
                    android:orientation="horizontal"
                    app:backgroundTint="@color/white">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/orderId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:fontFamily="@font/poppinsregular"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/orderPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:fontFamily="@font/poppinsregular"
                            android:layoutDirection="rtl"
                            android:text=""
                            android:textColor="@color/purple_700"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/orderStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:drawablePadding="@dimen/_5sdp"
                            android:fontFamily="@font/poppinsregular"
                            android:layoutDirection="rtl"
                            android:padding="@dimen/_4sdp"
                            android:text=""
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:textAllCaps="true"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llOne"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:visibility="gone"
                        >
                        <ImageView
                            android:id="@+id/product_image"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:scaleType="fitXY"/>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llTwo"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginLeft="@dimen/_2sdp"
                        >
                        <ImageView
                            android:id="@+id/product_imageTw01"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".5"
                            android:scaleType="fitXY"
                            />

                        <ImageView
                            android:id="@+id/product_imageTwo2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".5"
                            android:scaleType="fitXY"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llThree"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:layout_marginLeft="@dimen/_2sdp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".5"
                            android:weightSum="1"
                            >
                            <ImageView
                                android:id="@+id/product_imageThree1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".5"
                                android:scaleType="fitXY"/>

                            <ImageView
                                android:id="@+id/product_imageThree2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".5"
                                android:scaleType="fitXY"/>
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".5">

                            <ImageView
                                android:id="@+id/product_imageThree3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"/>
                        </LinearLayout>




                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llFour"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:visibility="visible"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:layout_marginLeft="@dimen/_2sdp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".5"
                            android:weightSum="1"
                            >
                            <ImageView
                                android:id="@+id/product_imageFour1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".5"
                                android:scaleType="fitXY"/>

                            <ImageView
                                android:id="@+id/product_imageFour2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".5"
                                android:scaleType="fitXY"/>
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".5"
                            android:weightSum="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/product_imageFour3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".5"
                                android:scaleType="fitXY"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".5"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvImgCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:fontFamily="@font/poppinsregular"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp"/>


                            </LinearLayout>

                        </LinearLayout>




                    </LinearLayout>



                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlAllBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear_text">
                    <TextView
                        android:id="@+id/btnAccept"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/btn_shape_capsule"
                        android:fontFamily="@font/poppinsregular"
                        android:paddingLeft="@dimen/_40sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:text="@string/view"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />



                    <ImageView
                        android:id="@+id/ivCenter"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_centerInParent="true"

                        android:elevation="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_22sdp"
                        android:src="@drawable/slide"
                        android:visibility="visible"/>


                    <TextView
                        android:id="@+id/btnDecline"
                        android:layout_width="@dimen/_145sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/btn_shape_red_captule"
                        android:fontFamily="@font/poppinsregular"
                        android:paddingLeft="@dimen/_40sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:text="@string/decline"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible"/>


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear_text"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/btnView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/btn_shape_capsule"
                        android:fontFamily="@font/poppinsregular"
                        android:paddingTop="@dimen/_10sdp"
                        android:gravity="center_horizontal"
                        android:text="@string/view"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />






                </RelativeLayout>



            </RelativeLayout>

        </androidx.cardview.widget.CardView>


</layout>
